<div class="form-container">
  <div class="user-name">{{userName}}</div>
  <form class="user-info">
    <div class="info-container">
      {{#each input}}
        {{{this}}}
      {{/each}}
    </div>
    <div class="button-container">
      {{{buttonSave}}}
      {{{buttonChangePassword}}}
      {{{buttonChangeUserInfo}}}
      {{{buttonLogout}}}
    </div>
  </form>
</div>