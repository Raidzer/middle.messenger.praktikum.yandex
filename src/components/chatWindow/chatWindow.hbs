<div class="ChatContainer">
  <div class="optionsChatContainer">
    <div class="user">
      <div class="userAvatar"></div>
      <div class="userName">Имя пользователя</div>
    </div>
    <div class="chatMenu">
      <button class="menu">
        <i class="fa-solid fa-bars"></i>
      </button>
    </div>
  </div>
  <div class="chatMessageContainer"></div>
  <div class="toolsChatContainer">
    <div class="loadFile">
      <button class="clipButton">
        <i class="fas fa-paperclip"></i>
      </button>
    </div>
    <form class="textMessageForm">
      <div class="textMessage">
        <input
          class="message"
          name="message"
          type="text"
          placeholder="Сообщение"
        />
      </div>
      <div class="sendMessage">
        <button class="sendMessage" type="submit">
          <i class="fa-solid fa-paper-plane"></i>
        </button>
      </div>
    </form>
  </div>
</div>