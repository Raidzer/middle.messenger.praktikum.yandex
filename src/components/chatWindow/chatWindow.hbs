<div class="chat-container">
  <div class="options-chat-container">
    <div class="user">
      <div class="user-avatar"></div>
      <div class="user-name">Имя пользователя</div>
    </div>
    <div class="chat-menu">
      <button class="menu">
        <i class="fa-solid fa-bars"></i>
      </button>
    </div>
  </div>
  <div class="chat-message-container"></div>
  <div class="tools-chat-container">
    <div class="load-file">
      <button class="clip-button">
        <i class="fas fa-paperclip"></i>
      </button>
    </div>
    <form class="text-message-form">
      <div class="text-message">
        <input
          class="message"
          name="message"
          type="text"
          placeholder="Сообщение"
        />
      </div>
      <div class="send-message">
        <button class="send-message" type="submit">
          <i class="fa-solid fa-paper-plane"></i>
        </button>
      </div>
    </form>
  </div>
</div>